@model IEnumerable<Elektronik>




<h3>ELEKTRONİK KATEGORİSİ</h3>


<div class="container">

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3">
                <div class="card mt-3" style="width: 18rem;">
                    <img src="@item.Image" class="card-img-top img-fluid" alt="..." style="object-fit:contain; height: 200px;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Marka</h5>
                        <p class="card-text">@item.Model</p>
                        <span class="d-block my-2">@item.Fiyat&#8378;</span>
                        <a asp-controller="Elektronik" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        <a asp-controller="Elektronik" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                        <a asp-controller="Elektronik" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row">
        <div class="col">
            <a asp-controller="Elektronik" asp-action="Add" class="btn btn-secondary p-2" >Yeni Elektronik Ekle</a>
        </div>
    </div>
</div>

