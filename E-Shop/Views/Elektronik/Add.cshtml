@model Elektronik

<h3>EKLENECEK SAYFA</h3>

<form method="post" asp-action="AddPost">
    <div class="form-group mb-2">
        <label asp-for="Marka"></label>
        <input type="text" asp-for="Marka" class="form-control" />

    </div>
    <div class="form-group mb-2">
        <label asp-for="Model"></label>
        <input type="text" asp-for="Model" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Fiyat"></label>
        <input type="text" asp-for="Fiyat" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="Image"></label>
        <input type="text" asp-for="Image" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="KategoriId"></label>
        <select asp-for="KategoriId" class="form-control" asp-items="ViewBag.Kategoriler">
            <option value="">Bir kategori seçin</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>