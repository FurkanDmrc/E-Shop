@model IEnumerable<Iphone>






<div class="container">
    <div class="row p-3">
       <div class="col text-center">
            <h3 class="h1" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; letter-spacing:3px">TELEFON KATEGORİSİ</h3>
       </div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3">
                <div class="card mt-3" style="width: 18rem;">
                    <img src="@item.Image" class="card-img-top img-fluid" alt="..." style="object-fit:contain; height: 200px;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Marka</h5>
                        <p class="card-text">@item.Model</p>
                        <span class="d-block my-2">@item.Fiyat&#8378;</span>
                        <a asp-controller="Telefon" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        <a asp-controller="Telefon" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                        <a asp-controller="Telefon" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>

        }
    </div>
    <div class="row">
        <div class="col p-3">
            <a asp-controller="Telefon" asp-action="Add" class="btn btn-secondary" style="width:150px">Yeni Telefon Ekle</a>
        </div>
    </div>
</div>