@model Iphone


<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Phone</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Marka"></label>
            <input asp-for="Marka"  disabled class="form-control" value="@Model.Marka" />
        </div>
        <div class="mb-3">
            <label asp-for="Model"></label>
            <input asp-for="Model" disabled class="form-control" value="@Model.Model" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Telefon" asp-action="Index" class="btn btn-secondary" style="width:150px">Ana Sayfaya Dön</a>
    </div>
</form>

